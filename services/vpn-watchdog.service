[Unit]
Description=VPN Watchdog Service
After=vpn-connect.service
Wants=vpn-connect.service
# Ensure the service restarts if the script fails
StartLimitIntervalSec=0

[Service]
Type=simple
ExecStart=/root/scripts/vpn-watchdog.sh
Restart=always
RestartSec=5
User=root
# Optional: ensure logs are captured in journalctl
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
